<Window x:Class="CadAtlasManager.UI.BatchPlotDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="批量打印设置 (Pro)" Height="650" Width="950" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gray"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="正在打印...">
                    <Setter Property="Foreground" Value="#FF8C00"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding Status}" Value="任务取消">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding IsSuccess}" Value="True">
                    <Setter Property="Foreground" Value="Green"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsSuccess}" Value="False">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ManualButtonStyle" TargetType="Button">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSuccess}" Value="False">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style x:Key="LeftAlignedHeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="5,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="&#x1F5A8;&#xFE0F; 打印机 / 绘图仪" FontWeight="Bold" Margin="0,0,0,8"/>
                    <ComboBox x:Name="CbPrinters" SelectionChanged="CbPrinters_SelectionChanged" Margin="0,0,0,12"/>

                    <GroupBox Header="打印顺序" Margin="0,5">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <RadioButton Name="RbOrderH" Content="横向 (Z字)" IsChecked="True" Margin="0,0,15,0" GroupName="Order"/>
                            <RadioButton Name="RbOrderV" Content="竖向 (N字)" GroupName="Order"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="比例与偏移" Margin="0,5">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="模式:" Grid.Row="0" Margin="0,5"/>
                            <CheckBox Name="ChkFitToPaper" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Content="布满图纸" 
                                      VerticalAlignment="Center" Margin="5,0"
                                      Checked="ChkFitToPaper_CheckedChanged" Unchecked="ChkFitToPaper_CheckedChanged"/>

                            <TextBlock Text="比例:" Grid.Row="1" Margin="0,5"/>
                            <ComboBox Name="CbScale" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" IsEditable="True" Margin="5,2"/>

                            <TextBlock Text="偏移X:" Grid.Row="2" Margin="0,5"/>
                            <TextBox Name="TbOffsetX" Grid.Row="2" Grid.Column="1" Text="0" Margin="5,2" Height="24"/>

                            <TextBlock Text="偏移Y:" Grid.Row="2" Grid.Column="2" Margin="5,5"/>
                            <TextBox Name="TbOffsetY" Grid.Row="2" Grid.Column="3" Text="0" Margin="5,2" Height="24"/>

                            <CheckBox Name="ChkCenterPlot" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Content="居中打印" 
                                      IsChecked="True" Margin="0,8,0,0"
                                      Checked="ChkCenterPlot_CheckedChanged" Unchecked="ChkCenterPlot_CheckedChanged"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="打印选项" Margin="0,5">
                        <UniformGrid Columns="2" Margin="5">
                            <CheckBox x:Name="ChkPlotLineweights" Content="打印对象线宽" IsChecked="True" Margin="0,5"/>
                            <CheckBox x:Name="ChkPlotTransparency" Content="打印透明度" IsChecked="False" Margin="0,5"
                                      ToolTip="勾选后处理速度可能会变慢"/>
                            <CheckBox x:Name="ChkPlotStyles" Content="使用打印样式" IsChecked="True" Margin="0,5"/>
                        </UniformGrid>
                    </GroupBox>

                    <DockPanel Margin="0,10,0,8">
                        <TextBlock Text="&#x1F4C4; 默认纸张" FontWeight="Bold" VerticalAlignment="Center"/>
                        <CheckBox x:Name="ChkLockPaper" Content="锁定" Margin="10,0,0,0" VerticalAlignment="Center" 
                                  ToolTip="勾选后将强制使用下方选定的纸张，不再根据图框尺寸自动匹配纸张"/>
                    </DockPanel>
                    <ComboBox x:Name="CbPaper" Margin="0,0,0,12"/>

                    <TextBlock Text="&#x1F3A8; 打印样式表" FontWeight="Bold" Margin="0,0,0,8"/>
                    <ComboBox x:Name="CbStyles" Margin="0,0,0,12"/>

                    <TextBlock Text="&#x1F4E6; 图框块名" FontWeight="Bold" Margin="0,0,0,4"/>
                    <TextBox x:Name="TbBlockNames" Margin="0,0,0,12" Height="26"/>

                    <CheckBox x:Name="ChkAutoRotate" Content="自动旋转 (适应纸张)" IsChecked="True" Margin="0,5,0,20"/>

                    <UniformGrid Columns="2" Rows="1">
                        <Button x:Name="BtnPrint" Content="开始打印" Click="BtnPrint_Click"
                                Height="35" Background="#007ACC" Foreground="White" FontWeight="Bold" BorderThickness="0" Margin="0,0,5,0"/>
                        <Button x:Name="BtnCancelPlot" Content="取消打印" Click="BtnCancelPlot_Click" IsEnabled="False"
                                Height="35" Background="#F44336" Foreground="White" FontWeight="Bold" BorderThickness="0" Margin="5,0,0,0"/>
                    </UniformGrid>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="&#x1F4DA; 打印执行任务列表" FontWeight="Bold" FontSize="14" DockPanel.Dock="Left"/>
                <TextBlock x:Name="TxtCount" Text="共 0 个文件" DockPanel.Dock="Right" HorizontalAlignment="Right" Foreground="Gray"/>
            </DockPanel>

            <ListView x:Name="LvFiles" Grid.Row="1" BorderThickness="1" BorderBrush="#DDD" Background="White">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="45" HeaderContainerStyle="{StaticResource LeftAlignedHeaderStyle}">
                            <GridViewColumn.Header>
                                <CheckBox ToolTip="全选" Click="HeaderCheckBox_Click" Margin="1,0,0,0"/>
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="打印状态" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Status}" Style="{StaticResource StatusTextStyle}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="文件名" Width="280">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FileName}" ToolTip="{Binding FilePath}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="交互操作" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="手动拾取" Click="BtnManualPlot_Click" 
                                            Style="{StaticResource ManualButtonStyle}"
                                            Padding="8,2" Background="#FFF9ED" BorderBrush="#FFB900" Foreground="#9A6200"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
<Window x:Class="CadAtlasManager.UI.BatchPlotDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="批量打印设置 (Pro)" Height="600" Width="900" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
        <Style x:Key="LeftAlignedHeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="2"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0,0,5,0">
                <StackPanel>
                    <TextBlock Text="🖨️ 打印机 / 绘图仪" FontWeight="Bold" Margin="0,0,0,8"/>
                    <ComboBox x:Name="CbPrinters" SelectionChanged="CbPrinters_SelectionChanged"/>

                    <GroupBox Header="打印顺序" Margin="0,5">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <RadioButton Name="RbOrderH" Content="横向 (Z字)" IsChecked="True" Margin="0,0,15,0" GroupName="Order"/>
                            <RadioButton Name="RbOrderV" Content="竖向 (N字)" GroupName="Order"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="比例与偏移" Margin="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="模式:" VerticalAlignment="Center" Margin="5"/>
                            <CheckBox Name="ChkFitToPaper" Grid.Column="1" Grid.ColumnSpan="3" Content="布满图纸" 
                                      IsChecked="False" Margin="2,8" Checked="ChkFitToPaper_CheckedChanged" Unchecked="ChkFitToPaper_CheckedChanged"/>

                            <TextBlock Text="比例:" Grid.Row="1" VerticalAlignment="Center" Margin="5"/>
                            <ComboBox Name="CbScale" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Margin="2,2,2,8" 
                                      IsEditable="True" IsEnabled="True">
                                <ComboBoxItem Content="1:1"/>
                                <ComboBoxItem Content="1:2"/>
                                <ComboBoxItem Content="1:4"/>
                                <ComboBoxItem Content="1:5"/>
                                <ComboBoxItem Content="1:8"/>
                                <ComboBoxItem Content="1:10"/>
                                <ComboBoxItem Content="1:20"/>
                                <ComboBoxItem Content="1:50"/>
                                <ComboBoxItem Content="1:100"/>
                                <ComboBoxItem Content="1:200"/>
                                <ComboBoxItem Content="1:500"/>
                            </ComboBox>

                            <TextBlock Text="偏移 X:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                            <TextBox Name="TbOffsetX" Grid.Row="2" Grid.Column="1" Text="0" Margin="2" IsEnabled="False"/>

                            <TextBlock Text="偏移 Y:" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Margin="5"/>
                            <TextBox Name="TbOffsetY" Grid.Row="2" Grid.Column="3" Text="0" Margin="2" IsEnabled="False"/>

                            <CheckBox Name="ChkCenterPlot" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Content="居中打印" 
                                      IsChecked="True" Margin="5,5,0,0" Checked="ChkCenterPlot_CheckedChanged" Unchecked="ChkCenterPlot_CheckedChanged"/>
                        </Grid>
                    </GroupBox>

                    <TextBlock Text="📄 默认纸张" FontWeight="Bold" Margin="0,5,0,8"/>
                    <ComboBox x:Name="CbPaper"/>

                    <TextBlock Text="🎨 打印样式表 (CTB/STB)" FontWeight="Bold" Margin="0,0,0,8"/>
                    <ComboBox x:Name="CbStyles"/>

                    <TextBlock Text="📦 图框识别设置" FontWeight="Bold" Margin="0,20,0,8"/>
                    <TextBlock Text="图框块名 (逗号分隔):" Margin="0,0,0,4" FontSize="12"/>
                    <TextBox x:Name="TbBlockNames" Margin="0,0,0,15"/>

                    <CheckBox x:Name="ChkAutoRotate" Content="自动旋转 (适应纸张方向)" IsChecked="True" Margin="0,0,0,20" FontWeight="SemiBold"/>

                    <Button x:Name="BtnPrint" Content="🚀 开始批量打印" Click="BtnPrint_Click"
                            Height="40" Background="#007ACC" Foreground="White" FontWeight="Bold" 
                            Cursor="Hand" BorderThickness="0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="📚 待打印文件列表" FontWeight="Bold" FontSize="14" DockPanel.Dock="Left"/>
                <TextBlock x:Name="TxtCount" Text="共 0 个文件" DockPanel.Dock="Right" HorizontalAlignment="Right" Foreground="Gray"/>
            </DockPanel>

            <ListView x:Name="LvFiles" Grid.Row="1" BorderThickness="1" BorderBrush="#DDD" Background="White">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="40" HeaderContainerStyle="{StaticResource LeftAlignedHeaderStyle}">
                            <GridViewColumn.Header>
                                <CheckBox ToolTip="全选/反选" 
                  IsChecked="False" 
                  Click="HeaderCheckBox_Click"
                  VerticalAlignment="Center" 
                  Margin="12,0,0,0"/>
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected}" 
                      VerticalAlignment="Center" 
                      Margin="6,0,0,0"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="文件名" Width="280">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FileName}" ToolTip="{Binding FilePath}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="状态" Width="100" DisplayMemberBinding="{Binding VersionStatus}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
<UserControl x:Class="CadAtlasManager.AtlasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CadAtlasManager"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="350" Background="#f0f0f0">

    <UserControl.Resources>
        <local:BooleanToAngleConverter x:Key="BoolToAngleConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <ContextMenu x:Key="PlotContextMenu">
            <MenuItem Header="打开图纸" Click="MenuItem_Open_Click" FontWeight="Bold"/>
            <MenuItem Header="打开源 DWG 文件" Click="MenuItem_OpenSourceDwg_Click"/>
            <Separator/>
            <MenuItem Header="🔗 绑定至源图纸..." Click="MenuItem_BindExternalPdf_Click" ToolTip="手动建立该 PDF 与源 DWG 的关联"/>
            <Separator/>
            <MenuItem Header="删除图纸" Click="MenuItem_Delete_Click" Foreground="Red"/>
        </ContextMenu>

        <ContextMenu x:Key="FolderContextMenu">
            <MenuItem Header="打开" Click="MenuItem_Open_Click" FontWeight="Bold"/>
            <MenuItem Header="作为图块插入" Click="MenuItem_InsertBlock_Click"/>
            <Separator/>
            <MenuItem Header="信息备注" Click="MenuItem_Remark_Click"/>
            <MenuItem Header="一键打包" Click="MenuItem_Zip_Click"/>
            <Separator/>
            <MenuItem Header="重命名" Click="MenuItem_Rename_Click"/>
            <Separator/>
            <MenuItem Header="全部展开" Click="MenuItem_Expand_Click"/>
            <MenuItem Header="全部折叠" Click="MenuItem_Collapse_Click"/>
            <Separator/>
            <MenuItem Header="从列表中移除" Click="MenuItem_Remove_Click"/>
        </ContextMenu>

        <ContextMenu x:Key="ProjectFolderContextMenu">
            <MenuItem Header="新建文件夹" Click="MenuItem_NewFolder_Click"/>
            <MenuItem Header="信息备注" Click="MenuItem_Remark_Click"/>
            <MenuItem Header="一键打包" Click="MenuItem_Zip_Click"/>
            <MenuItem Header="删除" Click="MenuItem_Delete_Click" Foreground="Red"/>
            <MenuItem Header="重命名" Click="MenuItem_Rename_Click"/>
            <Separator/>
            <MenuItem Header="全部展开" Click="MenuItem_Expand_Click"/>
            <MenuItem Header="全部折叠" Click="MenuItem_Collapse_Click"/>
        </ContextMenu>

        <ContextMenu x:Key="ProjectFileContextMenu">
            <MenuItem Header="信息备注" Click="MenuItem_Remark_Click"/>
            <MenuItem x:Name="MenuConfirmBind" Header="✅ 确认绑定 PDF" Click="MenuItem_ConfirmBind_Click" 
              Visibility="Collapsed" Background="#FFF9ED" FontWeight="Bold"/>
            <Separator x:Name="BindSeparator" Visibility="Collapsed"/>
            <MenuItem Header="一键打包" Click="MenuItem_Zip_Click"/>
            <MenuItem Header="删除文件" Click="MenuItem_Delete_Click" Foreground="Red"/>
            <MenuItem Header="插入图块" Click="MenuItem_InsertBlock_Click"/>
            <MenuItem Header="插入参照" Click="MenuItem_InsertXref_Click"/>
            <MenuItem Header="重命名" Click="MenuItem_Rename_Click"/>
        </ContextMenu>

        <HierarchicalDataTemplate x:Key="FileSystemTemplate" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal">
                <Grid Margin="0,0,5,0">
                    <TextBlock Text="{Binding TypeIcon}" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Text="ℹ️" FontSize="8" FontWeight="Bold" Foreground="#007ACC"
                               VerticalAlignment="Bottom" HorizontalAlignment="Right"
                               Visibility="{Binding HasRemark, Converter={StaticResource BoolToVis}}"
                               Margin="0,0,-2,-2" Background="White"/>
                </Grid>
                <TextBlock Text="{Binding Name}" FontWeight="{Binding FontWeight}" VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#333333"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsActive}" Value="True">
                                    <Setter Property="Foreground" Value="Red"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <TextBlock Text="{Binding VersionStatus}" 
                           Foreground="{Binding StatusColor}" 
                           FontWeight="Bold" 
                           Margin="5,0,0,0" 
                           VerticalAlignment="Center"
                           ToolTip="图纸版本状态"/>
            </StackPanel>
        </HierarchicalDataTemplate>

        <Style TargetType="{x:Type TreeViewItem}">
            <Setter Property="ContextMenu" Value="{StaticResource FolderContextMenu}"/>
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="14" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <ToggleButton x:Name="Expander" ClickMode="Press" 
                                          IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Focusable" Value="False"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <TextBlock Text="▶" FontSize="9" Foreground="#888" 
                                                               VerticalAlignment="Center" HorizontalAlignment="Center"
                                                               RenderTransformOrigin="0.5,0.5">
                                                        <TextBlock.RenderTransform>
                                                            <RotateTransform Angle="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToAngleConverter}}"/>
                                                        </TextBlock.RenderTransform>
                                                    </TextBlock>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                            <Border x:Name="Bd" 
                                    Grid.Column="1" 
                                    Padding="2,2" 
                                    CornerRadius="2" 
                                    BorderThickness="1" 
                                    BorderBrush="Transparent">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsItemSelected}" Value="True">
                                                <Setter Property="Background" Value="#CCE8FF"/>
                                                <Setter Property="BorderBrush" Value="#99D1FF"/>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E5F3FF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <ContentPresenter x:Name="PART_Header" ContentSource="Header" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                            </Border>
                            <ItemsPresenter x:Name="ItemsHost" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="Expander" Property="Visibility" Value="Hidden" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl x:Name="MainTabControl" Grid.Row="0" Background="White" BorderThickness="0">
            <TabItem Background="#f0f0f0">
                <TabItem.Header>
                    <TextBlock Text="📚 资料图集库" FontSize="14" VerticalAlignment="Center" Margin="2,0"/>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Name="TbSearch" Height="26" VerticalContentAlignment="Center" 
                                 Padding="5,0" TextChanged="TbSearch_TextChanged"/>
                        <ComboBox Name="CbFileType" Grid.Column="1" Width="80" Margin="5,0,0,0" 
                                  SelectionChanged="CbFileType_SelectionChanged" SelectedIndex="0">
                            <ComboBoxItem Content="所有格式"/>
                            <ComboBoxItem Content="DWG图纸"/>
                            <ComboBoxItem Content="办公文档"/>
                            <ComboBoxItem Content="图片"/>
                            <ComboBoxItem Content="PDF"/>
                            <ComboBoxItem Content="压缩包"/>
                        </ComboBox>
                    </Grid>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5,0">
                        <Button Name="BtnLoadFolder" Content="+ 导入图集" Padding="8,4" Click="BtnLoadFolder_Click" Background="#ddd"/>
                        <Button Content="刷新列表" Margin="5,0,0,0" Padding="8,4" Click="BtnRefresh_Click"/>
                        <Button Content="💾 保存布局" Margin="5,0,0,0" Padding="8,4" Click="BtnSaveLayout_Click" ToolTip="保存当前各选项卡的栏位宽度设置"/>
                    </StackPanel>
                    <Border Grid.Row="2" BorderBrush="#ddd" BorderThickness="0,1,0,1" Padding="5" Margin="0,5" Background="#fafafa">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <RadioButton Name="RbReadOnly" Content="只读" GroupName="Mode" IsChecked="True" Margin="0,0,10,0" Foreground="Blue"/>
                            <RadioButton Name="RbEdit" Content="编辑" GroupName="Mode" Margin="0,0,10,0" Foreground="Red"/>
                            <RadioButton Name="RbCopy" Content="复制" GroupName="Mode" Foreground="Green" ToolTip="复制到激活的项目"/>
                        </StackPanel>
                    </Border>
                    <TreeView Name="FileTree" Grid.Row="3" BorderThickness="0" 
                              ItemTemplate="{StaticResource FileSystemTemplate}"
                              MouseDoubleClick="FileTree_MouseDoubleClick"
                              PreviewMouseLeftButtonDown="OnTreeItemClick"
                              PreviewMouseRightButtonDown="OnTreeItemRightClick" SelectedItemChanged="OnTreeSelectionChanged">
                    </TreeView>
                    <TextBlock Grid.Row="4" Text="Ctrl+点击多选 | Shift+点击连选" Foreground="Gray" FontSize="10" HorizontalAlignment="Center" Margin="5"/>
                </Grid>
            </TabItem>

            <TabItem Background="#f0f0f0">
                <TabItem.Header>
                    <TextBlock Text="🏗️ 项目工作台" FontSize="14" VerticalAlignment="Center" Margin="2,0"/>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock Text="当前激活项目 (Active Project)：" Foreground="Blue" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Name="CbProjects" Height="30" VerticalContentAlignment="Center" 
                                      SelectionChanged="CbProjects_SelectionChanged" DisplayMemberPath="Name"/>
                            <Button Content="+ 新建/导入" Grid.Column="1" Margin="5,0,0,0" Padding="8,0" Click="BtnAddProject_Click"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Button Content="📂 浏览文件" Click="BtnOpenProjectFolder_Click" Margin="0,0,5,0"/>
                            <Button Content="❌ 移除项目" Click="BtnRemoveProject_Click" Margin="0,0,5,0"/>
                            <Button Content="🔄 刷新" Click="BtnRefreshProject_Click" Margin="0,0,25,0" ToolTip="刷新项目文件"/>
                            <TextBlock Text="筛选:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Gray"/>
                            <ComboBox Name="CbProjectFileType" Width="90" SelectionChanged="CbProjectFileType_SelectionChanged" SelectedIndex="0">
                                <ComboBoxItem Content="所有格式"/>
                                <ComboBoxItem Content="DWG图纸"/>
                                <ComboBoxItem Content="办公文档"/>
                                <ComboBoxItem Content="图片"/>
                                <ComboBoxItem Content="PDF"/>
                                <ComboBoxItem Content="压缩包"/>
                            </ComboBox>
                            <Button Content="🖨️ 批量打印 (PDF)" Click="MenuItem_BatchPlot_Click" FontWeight="Bold" Margin="10,0,0,0" Padding="10,0" Background="#E1F5FE" BorderBrush="#03A9F4"/>
                        </StackPanel>
                    </StackPanel>

                    <Separator Grid.Row="1" Margin="0,10"/>

                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="ColProjectTree" Width="1.2*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <DockPanel Grid.Column="0">
                            <TextBlock Text="📁 项目目录" DockPanel.Dock="Top" Foreground="Gray" Margin="0,0,0,5"/>
                            <TreeView Name="ProjectTree" ItemTemplate="{StaticResource FileSystemTemplate}"
          SelectedItemChanged="ProjectTree_SelectedItemChanged" 
          BorderThickness="1" BorderBrush="#eee"
          PreviewKeyDown="ProjectInternal_KeyDown">
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="{x:Type TreeViewItem}" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                                        <Setter Property="ContextMenu" Value="{StaticResource ProjectFolderContextMenu}"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#BEE6FD"/>
                                                <Setter Property="BorderBrush" Value="#007ACC"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TreeView.ItemContainerStyle>
                            </TreeView>
                        </DockPanel>

                        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" Background="Transparent"/>

                        <DockPanel Grid.Column="2">
                            <TextBlock Text="📄 文件明细" DockPanel.Dock="Top" Foreground="Gray" Margin="0,0,0,5"/>
                            <DataGrid Name="ProjectFileList" 
          AutoGenerateColumns="False" CanUserAddRows="False" 
          SelectionMode="Extended" MouseDoubleClick="ProjectFileList_MouseDoubleClick"
          ContextMenu="{StaticResource ProjectFileContextMenu}"
          PreviewKeyDown="ProjectInternal_KeyDown">
                                <DataGrid.ItemContainerStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="IsSelected" Value="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Style>
                                </DataGrid.ItemContainerStyle>
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Width="40">
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <CheckBox Click="OnSelectAllProjectFiles_Click" ToolTip="全选/反选" Margin="6,0,0,0"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                          HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTextColumn Header="类型" Binding="{Binding TypeIcon}" IsReadOnly="True" Width="45" SortMemberPath="TypeIcon"/>

                                    <DataGridTemplateColumn Width="40" Header="备注">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="ℹ️" Foreground="#007ACC" FontWeight="Bold" HorizontalAlignment="Center"
                                                           Visibility="{Binding HasRemark, Converter={StaticResource BoolToVis}}" 
                                                           ToolTip="该文件有备注内容"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTextColumn x:Name="ColProjectFileName" Header="文件名称" Binding="{Binding Name}" IsReadOnly="True" Width="*" SortMemberPath="Name">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="{Binding FontWeight}"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Header="修改日期" Binding="{Binding FileDate}" IsReadOnly="True" Width="140"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DockPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Background="#f0f0f0">
                <TabItem.Header>
                    <TextBlock Text="📑 图纸工作台" FontSize="14" VerticalAlignment="Center" Margin="2,0"/>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="当前项目：" Foreground="Gray" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SelectedItem.Name, ElementName=CbProjects}" FontWeight="Bold" Foreground="Blue" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Button Content="📂 打开输出目录" Click="BtnOpenPlotFolder_Click" Margin="0,0,5,0"/>
                            <Button Content="🔍 校验版本" Click="BtnCheckVersion_Click" Margin="0,0,5,0" ToolTip="检查图纸是否需要重新打印"/>
                            <Button Content="🔄 刷新" Click="BtnRefreshPlot_Click" Margin="0,0,20,0"/>
                            <Button Content="🗑️ 删除" Click="BtnDeletePlotFiles_Click" Margin="0,0,5,0" Foreground="Red"/>
                            <Button Content="📄+📄 合并PDF" Click="BtnMergePdf_Click" ToolTip="合并选中的PDF文件" Margin="0,0,5,0"/>
                            <Button Content="📂 打开源文件" Click="BtnOpenSourceDwg_Click" ToolTip="打开当前PDF对应的DWG图纸" Margin="0,0,5,0"/>

                            <Button Content="🖨️ 批量重印" Click="BtnBatchPlotFromPlot_Click" 
            FontWeight="Bold" Padding="10,0" Background="#E1F5FE" BorderBrush="#03A9F4"
            ToolTip="重新打印选中PDF对应的源DWG图纸"/>
                        </StackPanel>
                    </StackPanel>

                    <Separator Grid.Row="1" Margin="0,10"/>

                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="ColPlotTree" Width="1.2*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <DockPanel Grid.Column="0">
                            <TextBlock Text="📁 归档目录" DockPanel.Dock="Top" Foreground="Gray" Margin="0,0,0,5"/>
                            <TreeView Name="PlotFolderTree" 
          ItemTemplate="{StaticResource FileSystemTemplate}"
          SelectedItemChanged="PlotFolderTree_SelectedItemChanged"
          BorderThickness="1" BorderBrush="#eee" Background="White"
          PreviewKeyDown="PlotInternal_KeyDown">
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="{x:Type TreeViewItem}" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                                        <Setter Property="IsExpanded" Value="True"/>
                                    </Style>
                                </TreeView.ItemContainerStyle>
                            </TreeView>
                        </DockPanel>

                        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" Background="Transparent"/>

                        <DockPanel Grid.Column="2">
                            <TextBlock Text="📄 文件明细" DockPanel.Dock="Top" Foreground="Gray" Margin="0,0,0,5"/>
                            <DataGrid Name="PlotFileList" 
          AutoGenerateColumns="False" CanUserAddRows="False" 
          GridLinesVisibility="Horizontal" Background="White" BorderBrush="#eee"
          SelectionMode="Extended" MouseDoubleClick="PlotFileList_MouseDoubleClick"
          ContextMenu="{StaticResource PlotContextMenu}"
          PreviewKeyDown="PlotInternal_KeyDown">
                                <DataGrid.ItemContainerStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="IsSelected" Value="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Style>
                                </DataGrid.ItemContainerStyle>
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Width="40">
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <CheckBox Click="OnSelectAllPlotFiles_Click" ToolTip="全选/反选" Margin="6,0,0,0"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                          HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="类型" Binding="{Binding TypeIcon}" IsReadOnly="True" Width="45"/>

                                    <DataGridTextColumn x:Name="ColPlotFileName" Header="文件名称" Binding="{Binding Name}" IsReadOnly="True" Width="*" SortMemberPath="Name">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="{Binding FontWeight}"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="版本状态" Binding="{Binding VersionStatus}" IsReadOnly="True" Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{Binding StatusColor}"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="修改日期" Binding="{Binding FileDate}" IsReadOnly="True" Width="140"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DockPanel>
                    </Grid>
                    <TextBlock Grid.Row="3" Text="此处展示 _Plot 文件夹内的输出文件" Foreground="Gray" FontSize="10" HorizontalAlignment="Center" Margin="5"/>
                </Grid>
            </TabItem>
        </TabControl>

        <Button Content="ⓘ" HorizontalAlignment="Right" VerticalAlignment="Top" 
        Margin="0,-5,8,0" Width="35" Height="35" Grid.Row="0"
        Foreground="Gray" FontWeight="Bold" FontSize="20"
        ToolTip="版本信息" Click="BtnVersion_Click"
        FocusVisualStyle="{x:Null}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="Transparent">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Border x:Name="RemarkPanel" Grid.Row="1" Height="0" 
                Background="White" BorderBrush="#007ACC" BorderThickness="0,2,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Background="#F5F5F5" Grid.Row="0">
                    <StackPanel Orientation="Horizontal" Margin="10,5">
                        <TextBlock Text="📝 信息备注" FontWeight="Bold" Foreground="#333"/>
                        <TextBlock Text=" (实时保存)" FontSize="10" Foreground="Gray" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                    <Button Content="✕" HorizontalAlignment="Right" Width="25" 
                            Background="Transparent" BorderThickness="0" Click="BtnCloseRemark_Click"/>
                </Grid>
                <TextBox Name="TbRemark" Grid.Row="1" Margin="5"
                         AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                         BorderThickness="0" Background="Transparent"
                         FontSize="13" Padding="5"
                         TextChanged="TbRemark_TextChanged"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>